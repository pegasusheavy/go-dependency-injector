#!/bin/bash
#
# Pre-commit hook for go-dependency-injector
# Runs formatting and linting checks before allowing a commit
#

set -e

YELLOW='\033[1;33m'
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Get list of staged Go files
STAGED_GO_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.go$' || true)

if [[ -z "$STAGED_GO_FILES" ]]; then
    echo -e "${GREEN}No Go files staged, skipping checks.${NC}"
    exit 0
fi

# Check if Go is installed
if ! command -v go &> /dev/null; then
    echo -e "${RED}Error: Go is not installed${NC}"
    exit 1
fi

# 1. Check formatting with gofmt
echo -e "\n${YELLOW}[1/3] Checking formatting...${NC}"
UNFORMATTED=$(gofmt -l $STAGED_GO_FILES 2>&1 || true)
if [[ -n "$UNFORMATTED" ]]; then
    echo -e "${RED}The following files are not formatted:${NC}"
    echo "$UNFORMATTED"
    echo -e "\nRun 'gofmt -w .' to fix formatting."
    exit 1
fi
echo -e "${GREEN}✓ All files formatted correctly${NC}"

# 2. Run go vet
echo -e "\n${YELLOW}[2/3] Running go vet...${NC}"
if ! go vet ./... 2>&1; then
    echo -e "${RED}go vet found issues${NC}"
    exit 1
fi
echo -e "${GREEN}✓ go vet passed${NC}"

# 3. Run tests (only if test files exist)
echo -e "\n${YELLOW}[3/3] Running tests...${NC}"
if ls *_test.go &> /dev/null || find . -name '*_test.go' -print -quit | grep -q .; then
    if ! go test -short ./... 2>&1; then
        echo -e "${RED}Tests failed${NC}"
        exit 1
    fi
    echo -e "${GREEN}✓ All tests passed${NC}"
else
    echo -e "${GREEN}✓ No tests to run${NC}"
fi

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0

